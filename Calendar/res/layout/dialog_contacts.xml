<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/reminder_pop_card_ll"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_h"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/dialog_title_tv" 
            android:layout_width="fill_parent" 
		    android:layout_height="50dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#000000"/>
        <LinearLayout 
            android:id="@+id/add_Contact_layout" 
            android:layout_width="250dp" 
		    android:layout_height="50dp"
		    android:orientation="horizontal">
	        <TextView
			    android:id="@+id/tv_addContact"
			    android:layout_width="200dp" 
			    android:layout_height="fill_parent"
			    android:background="@drawable/login_img_input"
			    android:gravity="center"/>
	        <ImageButton
			    android:id="@+id/btn_addContact"
			    android:layout_width="50dp" 
			    android:layout_height="50dp"
			    android:background="@drawable/icn_addevent"/>
        </LinearLayout>
        <ListView 
	        android:id="@+id/listview_dialog"
	        android:layout_width="250dp"
	        android:layout_height="200dp"
	        android:cacheColorHint="#00000000"
	        android:listSelector="#00000000"
	        android:divider="@drawable/contact_separateline"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:background="@drawable/login_img_input"/>
        <ImageButton 
	        android:id="@+id/btn_save"  
	        android:layout_width="100dp"  
	        android:layout_height="40dp"
	        android:background="@drawable/addevent_btn_save"
	        android:text="save"
	        android:layout_marginTop="5dp"/>
    </LinearLayout>
</RelativeLayout>