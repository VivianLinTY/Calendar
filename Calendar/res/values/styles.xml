<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="content_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#255578</item>
    </style>
    
	<style name="content_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#29ABE2</item>
    </style>
    
	<style name="MyDialog" parent="@android:Theme.Dialog">
     	<item name="android:windowFrame">@null</item>
     	<item name="android:windowNoTitle">true</item> 
     	<item name="android:windowBackground">@color/dialog_gray_bg</item>
     	<item name="android:windowIsFloating">true</item>
     	<item name="android:windowContentOverlay">@null</item>
 	</style>
 	
	<style name="title">
     	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#559999</item>
 	</style>
 	
	<style name="button_text">
     	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
 	</style>

	
    
</resources>